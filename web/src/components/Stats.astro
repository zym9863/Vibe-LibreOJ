---
interface Props {
  problemCount: number;
  languageCount: number;
  solutionCount: number;
}
const { problemCount, languageCount, solutionCount } = Astro.props;
---

<section class="stats">
  <div class="section-wrap">
    <div class="stats-row reveal">
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-val">{problemCount}</span>
        <span class="stat-key">problems solved</span>
      </div>
      <div class="stat-sep">/</div>
      <div class="stat-item">
        <span class="stat-val">{languageCount}</span>
        <span class="stat-key">languages</span>
      </div>
      <div class="stat-sep">/</div>
      <div class="stat-item">
        <span class="stat-val">{solutionCount}</span>
        <span class="stat-key">solutions generated</span>
      </div>
      <div class="stat-divider"></div>
    </div>
  </div>
</section>

<style>
  .stats {
    position: relative;
    z-index: 1;
    padding: 3rem 0;
  }

  .stats-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .stat-divider {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border-bright), transparent);
  }

  .stat-item {
    display: flex;
    align-items: baseline;
    gap: 8px;
    flex-shrink: 0;
  }

  .stat-val {
    font-family: var(--font-mono);
    font-size: 2rem;
    font-weight: 700;
    color: var(--accent);
    line-height: 1;
    text-shadow: 0 0 20px var(--accent-dim);
  }

  .stat-key {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .stat-sep {
    font-family: var(--font-mono);
    color: var(--border-bright);
    font-size: 1.5rem;
    font-weight: 300;
    flex-shrink: 0;
  }

  @media (max-width: 700px) {
    .stats-row {
      flex-direction: column;
      gap: 1.2rem;
    }

    .stat-divider {
      width: 60px;
      flex: none;
    }

    .stat-sep {
      display: none;
    }
  }
</style>
