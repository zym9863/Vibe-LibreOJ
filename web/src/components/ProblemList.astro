---
import type { Problem } from '../data/problems';
import CodePreview from './CodePreview.astro';

interface Props {
  problems: Problem[];
}
const { problems } = Astro.props;
---

<section class="problems">
  <div class="section-wrap">
    <div class="problems-header reveal">
      <span class="section-label">// PROBLEMS</span>
      <h2>题目列表</h2>
    </div>
    {problems.length === 0 ? (
      <p class="empty">暂无题目数据。运行 vloj 开始解题。</p>
    ) : (
      <div class="problem-list">
        {problems.map((p, i) => (
          <div class={`problem-row reveal reveal-d${Math.min(i + 1, 6)}`} data-problem-id={p.id}>
            <div class="problem-header">
              <div class="problem-left">
                <span class="problem-id">{String(p.id).padStart(3, '0')}</span>
                <div class="problem-sep"></div>
                <h3 class="problem-title">{p.title}</h3>
              </div>
              <div class="problem-right">
                <span class="lang-count">{Object.keys(p.solutions).length} lang</span>
                <a href={p.url} target="_blank" rel="noopener" class="loj-link">
                  loj.ac &nearr;
                </a>
                <button class="toggle-btn" aria-label="展开代码预览">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M6 9l6 6 6-6"/></svg>
                </button>
              </div>
            </div>
            <div class="problem-code" style="display: none;">
              <CodePreview solutions={p.solutions} problemId={p.id} />
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</section>

<script>
  document.querySelectorAll('.toggle-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.problem-row');
      if (!card) return;
      const codeEl = card.querySelector('.problem-code') as HTMLElement;
      if (!codeEl) return;
      const isHidden = codeEl.style.display === 'none';
      codeEl.style.display = isHidden ? 'block' : 'none';
      btn.classList.toggle('open', isHidden);
    });
  });
</script>

<style>
  .problems {
    position: relative;
    z-index: 1;
    padding: 6rem 0;
  }

  .problems-header {
    margin-bottom: 3rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent);
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  h2 {
    font-family: var(--font-mono);
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .empty {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--text-muted);
    padding: 3rem 0;
    text-align: center;
  }

  .problem-list {
    display: flex;
    flex-direction: column;
  }

  .problem-row {
    border-top: 1px solid var(--border);
    transition: background 0.2s;
  }

  .problem-row:last-child {
    border-bottom: 1px solid var(--border);
  }

  .problem-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
    gap: 1rem;
  }

  .problem-row:hover .problem-header {
    background: var(--bg-surface);
    margin: 0 -1rem;
    padding: 1rem;
    border-radius: 4px;
  }

  .problem-left {
    display: flex;
    align-items: center;
    gap: 16px;
    min-width: 0;
  }

  .problem-id {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--accent);
    font-weight: 600;
    flex-shrink: 0;
    letter-spacing: 0.05em;
  }

  .problem-sep {
    width: 1px;
    height: 16px;
    background: var(--border-bright);
    flex-shrink: 0;
  }

  .problem-title {
    font-family: var(--font-serif);
    font-size: 1rem;
    font-weight: 400;
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .problem-right {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-shrink: 0;
  }

  .lang-count {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-muted);
    background: var(--bg-elevated);
    padding: 3px 8px;
    border-radius: 3px;
    letter-spacing: 0.02em;
  }

  .loj-link {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--warm);
    padding: 3px 8px;
    border: 1px solid var(--warm-dim);
    border-radius: 3px;
    transition: all 0.2s;
  }

  .loj-link:hover {
    background: var(--warm-dim);
    opacity: 1;
  }

  .toggle-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background: none;
    border: 1px solid var(--border);
    border-radius: 4px;
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.2s;
  }

  .toggle-btn:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .toggle-btn svg {
    transition: transform 0.25s;
  }

  .toggle-btn.open svg {
    transform: rotate(180deg);
  }

  .problem-code {
    border-top: 1px solid var(--border);
  }

  @media (max-width: 640px) {
    .problem-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .problem-right {
      width: 100%;
      justify-content: flex-end;
    }
  }
</style>
